@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Identity;
@using riot.Models;
@model riot.Models.AccountViewModels.LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous" />
    <title>Sign In</title>
</head>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Home</a>

    <div class="collapse navbar-collapse" id="navbarSUpportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="#"></a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="#"></a>
            </li>
        </ul>
        <form class="form-inline my-1 my-lg-0">
        </form>
    </div>
</nav>

<div class="text-center"><p class="text-danger">@ViewData["error"]</p></div>

<div class="container">
    <div class="card-body">
        <div class="text-center">
            <h4>Sign In</h4>
        </div>
        <form method="post">
            <input type="Email" asp-for="Email" class="form-control" placeholder="Email" />
            <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
            <button type="submit" asp-action="Login" asp-controller="Account" class="btn btn-outline-dark">Sign In</button>
        </form>
    </div>
</div>